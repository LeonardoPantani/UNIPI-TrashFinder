<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mapeditor_editingmarker"
        android:textSize="16sp" />

    <Button
        android:id="@+id/mapeditor_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_delete_forever_24"
        android:text="@string/button_delete"
        android:textColor="@color/red"
        style="?android:attr/buttonBarButtonStyle" />

    <Button
        android:id="@+id/mapeditor_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapeditor_markertype" />

    <EditText
        android:id="@+id/mapeditor_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/mapeditor_notes"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">
        <Button
            android:id="@+id/mapeditor_leave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/button_cancel"
            android:layout_weight="0.5"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/mapeditor_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/mapeditor_save"
            android:layout_weight="0.5"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>